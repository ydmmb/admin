<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/card_view"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/both_match_style"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/white_translucent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img_Item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:background="@mipmap/default_200"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_name"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_marginStart="2sp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:scaleType="fitXY"
                android:text="sdfasdfasdfasf"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_cro"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="item_cro"
                android:textColor="@color/colorLightGreenAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/color"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="color"
                android:textColor="@color/colorLightGreenAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/durability"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="durability"
                android:textColor="@color/colorLightGreenAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/needVip"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="needVip"
                android:textColor="@color/colorLightGreenAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/grade"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="grade"
                android:textColor="@color/colorLightGreenAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option0"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option1"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/option2"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option3"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option4"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option5"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option6"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option7"
                style="@style/small_tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TextView"
                android:textColor="@color/bel_red_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>